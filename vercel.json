{
  "functions": {
    "api-edge/config.js": {
      "runtime": "edge"
    },
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/config",
      "destination": "/api-edge/config"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ]
} 